      <!-- Compiled and minified JavaScript -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <script>
        var campoR = document.getElementById('refS')
        var qntR = document.getElementById('qntR')
        var campoB = document.getElementById('bebS')
        var qntB = document.getElementById('qntB')
        var campoO = document.getElementById('outS')
        var qntO = document.getElementById('qntO')
        var baixas = []
        M.toast({html: baixas.length})
        function Add(){
          var vet = [campoR.value, qntR.value,campoB.value, qntB.value,campoO.value, qntO.value]
          baixas.push(vet)
          M.toast({html: baixas})
          M.toast({html: baixas.length})
          vet.map(function(r){document.getElementById('demo').insertAdjacentHTML('beforebegin',r+' / ')})
        }
      </script>
