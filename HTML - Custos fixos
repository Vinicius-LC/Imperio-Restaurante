      <!-- Compiled and minified JavaScript -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<Script>

  var CampoMes = document.getElementById("mes");
  var CampoAluguel = document.getElementById("aluguel");
  var CampoGas = document.getElementById("gas");
  var CampoInternet = document.getElementById("internet");
  var CampoLuz = document.getElementById("luz");
  var CampoAgua = document.getElementById("agua");      

  document.getElementById("botaoSalvar").addEventListener("click",SalvarDados);

  function SalvarDados() 
  {
   
    var Mes = CampoMes.value;
    var Aluguel = CampoAluguel.value;
    var Gas = CampoGas.value;
    var Internet = CampoInternet.value;
    var Luz = CampoLuz.value;
    var Agua = CampoAgua.value;
  
    if (Mes.trim().length == 0 || Aluguel.trim().length == 0 || Gas.trim().length == 0 || Internet.trim().length == 0 || Luz.trim().length == 0 || Agua.trim().length == 0) 
    {
      M.toast({html: "Preencher todos os campos!"});
    }
    else 
    {
      var Dados = 
      {
        Mes: CampoMes.value,
        Aluguel: CampoAluguel.value,
        Gas: CampoGas.value,
        Internet: CampoInternet.value,
        Luz: CampoLuz.value,
        Agua: CampoAgua.value,
      };
      google.script.run.salvarDados(Dados)
      M.toast({html: "Testando função!"});
      google.script.run.CustosMensais()
      function Salvar() 
      {
        M.toast({html: 'Atualizar' });
        
        CampoMes.value = "";
        CampoAluguel.value = "";
        CampoGas.value = "";
        CampoInternet.value = "";
        CampoLuz.value = "";
        CampoAgua.value = "";
      }
    } 
  }
  document.getElementById("botaoFechar").addEventListener('click',Fechar);

  function Fechar () {
    google.script.host.close();
  }
</script>

